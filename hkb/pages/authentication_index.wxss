/* 选择身份 */
.id-select{
    padding: 28rpx;
    margin-bottom:21rpx;
    background: #fff;
    font-size: 30rpx;
}
.id-itemsbox{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 174rpx;
}
.id-item{
    position: relative;
    width: 49%;
    height: 150rpx;
    line-height: 150rpx;
    border-radius: 10rpx;
    background: #dcdcdc;
    text-align: center;
    color: #fff;
}
.item-normal{
  background: #dcdcdc;
}
.itemselect{
    background: #1f9cfd;
}
.itemselect .cir
,.item-normal .cir{
  position: absolute;
  top:50rpx;
  right: 250rpx;
  background: #fff;
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
}

