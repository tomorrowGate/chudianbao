/* hkb/pages/statistics_index.wxss */
page{
    background: #fafafa;
}

/* 客户统计 */
.custom-static{
    width: 710rpx;
    padding:0 0 20rpx 0;
    margin: 14rpx auto;
    background: #fff;
}
.custom-static-title{
    height: 70rpx;
    line-height: 70rpx;
    font-size: 35rpx;
    text-align: center;
}
.custom-static-con{
    display: flex;
}
.static-item{
    flex:1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
}
.static-item+.static-item{
    border-left:1rpx solid #ccc;
}
.lightfont{
    color: #999;
}
.static-value{
    color: #1f9cfd;
}

/*品牌经销商 */
.bandstatic{
    width: 710rpx;
    padding:20rpx 30rpx;
    margin: 14rpx auto;
    background: #fff;
    font-size: 32rpx;
}
.band-static-title{
    display: flex;
    justify-content: space-between;
    height: 70rpx;
    line-height: 70rpx;
    padding-left:20rpx; 
    box-sizing: border-box;
}
.band-con{
    line-height: 90rpx;
    color: #1f9cfd;
    padding-left:20rpx; 
    box-sizing: border-box;
}
.band-num{
    font-size: 48rpx;
}

/* 我的数据 */
.datas{
    width: 710rpx;
    padding:20rpx 30rpx;
    margin: 14rpx auto;
    font-size: 32rpx;
}
.brand-data{
    margin: 14rpx auto;
    background: #fff;
}
.mydata{
    padding: 22rpx 0;
    margin: 14rpx auto;
    background: #fff;
}
.mydata-title{
    /* height: 70rpx; */
    line-height: 70rpx;
    text-align: center;
}
.mydata-outitem{
    display: flex;
}
.mydata-item{
    flex:1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items:flex-start;
    font-size: 30rpx;
    padding:20rpx; 
    box-sizing: border-box;
}
.mydata-item-key{
  line-height: 45rpx;
}
.mydata-item-value{
    font-weight: bold;
}

/* 本周客户 */
.connect-customer{
    background: #fff;
    margin-bottom: 35rpx;
}
.active{
    background: #1f9cfd;
    color: #fff;
}
.connect-tabbar{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100rpx;

}
.connect-tabbar-box{
    display: flex;
    overflow: hidden;
    width: 580rpx;
    height: 58rpx;
    line-height: 58rpx;
    border-radius: 29rpx;
    background: #efefef;
    font-size: 35rpx;
    text-align: center;
}
.connect-tabbar-item{
    flex:1
}
.connect-tabbar-item+.connect-tabbar-item{
  border-left:1rpx solid #fff
}
.customer-items{
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 177rpx;
    padding:0 42rpx;
    border-top:1rpx solid #ddd;
}
.custom-databox{
    display: flex;
}
.imgbox{
    width: 84rpx;
    height: 84rpx;
    border-radius: 50%;
    background: #ddd;
}
.imgbox .portrait{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.custom-data{
    margin-left: 21rpx;
}
.custom-name{
    font-size: 35rpx;
    line-height: 45rpx;
    font-weight: bold;
}
.custom-tel{
    font-size: 28rpx ;
    line-height: 45rpx;
    color: #999;
}
.near-vister{
    font-size: 28rpx ; 
    line-height: 45rpx;
}
.custom-rightbox{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-end;
  height: 100%;
}
.vister-time{
    font-size: 30rpx;
}
.customer-callbox{
    /* position: absolute;
    right:42rpx; */
    width: 62rpx;
    height: 62rpx;
    line-height: 62rpx;
    margin-top:-20rpx;
    background: #1f9cfd ;
    color: #fff;
    text-align: center;
    border-radius: 50%;
}
.callbox-activ{
    background:#d5d5d5
}