/* pages/index/index2.wxss */
page{
    /* background: #f6f6f6; */
  }
  
  /* 第一个轮播图 */
  .swiper{
    height:260px
  }
  .swiper  .wx-swiper-dots.wx-swiper-dots-horizontal{
    margin-bottom: -10rpx;
  }
  .swiper-item image{
    width: 100%;
  }
 

  /* 我的经销商 */
  .distributor-box{
    margin: 20rpx 0;
    padding: 20rpx 20rpx;
  }
  .distributor{
    display: flex;
    height: 285rpx;
    background: #fff;
    box-shadow: 0 0 10rpx #f0f0f0;
  }
  .distributor-left{
      display: flex;
      position: relative;
      flex-direction: column;
      align-items: center;
      width: 255rpx;
      background: rgb(235,246,255);
  }
  .distributor-left .mydis-key{
      position: absolute;
      top:35rpx;
      font-size: 30rpx;
      color: #999;
  }
  .distributor-left .mydis-val{
      margin: auto;
      font-size: 28rpx;
      color: #1f9cfd;
  }
  .distributor-left .mydis-val-num{
    font-size: 40rpx;
  }
  .distributor-right{
      display: flex;
      flex-wrap: wrap;
      flex:1;
  }
  .distributor-share{
    display: flex;
    position: relative;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 50%;
    height: 50%;
  }
  .distributor-share .mydis-key{
    font-size: 30rpx;
      color: #999;
  }
  .distributor-share .mydis-val{
    font-size: 30rpx;
    font-weight: bold;
  }

  /* 我的服务 */
  .myservice{
    /* height: 452rpx; */
    background: #fff;
    margin: 20rpx 0;
  }
  .ser-title{
    display: flex;
    align-items: center;
    height: 98rpx;
    padding-left:20rpx;
    font-size: 37rpx;
    font-weight: bold;
    border-bottom: 1rpx solid #ccc
  }
  .ser-itembox{
    display: flex;
    flex-wrap: wrap;
  }
  .ser-item{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 33.3%;
    height: 178rpx;
    font-size: 31rpx;
  }
  .ser-img{
    width: 54rpx;
    height: 54rpx;
    margin-bottom: 22rpx;
  }

  /*客服中心  */
.box-center{
  margin: 20rpx 0;
}
.outbox-normal{
  display: flex;
  height: 107rpx;
  padding:0 20rpx;
  background: #fff;
  align-items: center;
  justify-content: space-between;
}
.outbox-top{
  border-bottom: 2rpx solid #ddd
}
.bolder-font{
  font-weight: bolder;
  font-size: 40rpx;
}
.light-font{
  font-size: 28rpx;
  color: #c2c2c2;
}
.server-line{
  font-size: 31rpx;
  letter-spacing:5rpx;
}
.outbox-bottom .right{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 132rpx;
  border-left: 1px solid #c2c2c2
}
.outbox-bottom .right .iconfont{
  color: #1f9cfd;
  font-size: 58rpx;
}

/* 空白 */
.blank{
  height: 200rpx;
  background: #fefefe;
}

/* 客服 */
contact-button{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  opacity: 0;
}
.customerser{
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  /* line-height: 100rpx; */
  border-radius: 50%;
  text-align: center;
  background-color: #fff;
  box-shadow: 6rpx 6rpx 6rpx #ccc;
}
.customerser .customimg{
  position: absolute;
  left:0rpx;
  width: 100%;
  height: 100%;
  transform: scale(0.7);
  z-index: 2;
  top:-12rpx;
}
.customerser-contact{
  position: absolute;
  font-size:24rpx;
  bottom: 6rpx;
  width:30px;
  left:50%;
  margin-left:-15px;
  color:#1f9cfd;
   text-align: center;
}

/* 空白蒙层*/
.blankpage{
  position: fixed;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  opacity: 1;
  translate: .3s;
  z-index:6
}