/* pages/index/index2.wxss */
page{
    background: #f6f6f6;
  }
  
  /* 第一个轮播图 */
  .swiper{
    height:260px
  }
  .swiper  .wx-swiper-dots.wx-swiper-dots-horizontal{
    margin-bottom: -10rpx;
  }
  .swiper-item image{
    width: 100%;
  }
  
  /*上派集成社 */
  .outbox{
    display: flex;
    flex-direction: column;
    background: #fff;
    padding-bottom: 20rpx;
    margin: 20rpx 0;
  }
  .outbox .outbox-top{
      display: flex;
      align-items: center;
      height: 65rpx;
  }
  .head-main{
      display: flex;
      align-items: center;
      flex:1;
      vertical-align: middle;
  }
  .outbox .head-right{
      position: absolute;
      right: 28rpx;
  }
  .light-font{
    font-size: 28rpx;
    color: #c2c2c2;
  }
  .outbox-top .head-main{
      padding-left: 25rpx;
      font-size: 35rpx;
      border-left: 1rpx solid #ccc;
  }
  .outbox-top .head-tag{
      margin-left: 15rpx;
      padding: 0 17rpx;
      font-size: 25rpx;
      border-radius: 17rpx 17rpx 17rpx 0;
      background: #1f9cfd;
      color: #fff;
  }
  .outbox-bottom{
      padding: 20rpx 20rpx 0;
      font-size: 30rpx;
  }
  .outbox-add{
    padding-left:20rpx;
  }
  .ellipsis{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
  }

  .outbox .imgbox{
    width: 145rpx;
    height: 54rpx;
    overflow: hidden;
  }
  .imgbox .title-img{
    height: 100%;
    width:100%;
    transform: scale(1.8);
  }

  /* 我的经销商 */
  .distributor{
      display: flex;
      height: 285rpx;
      background: #fff;
      margin: 20rpx 0;
  }
  .distributor-left{
      display: flex;
      position: relative;
      flex-direction: column;
      align-items: center;
      width: 255rpx;
      background: rgb(235,246,255);
  }
  .distributor-left .mydis-key{
      position: absolute;
      top:40rpx;
      font-size: 28rpx;
      color: #999;
  }
  .distributor-left .mydis-val{
      margin: auto;
      font-size: 28rpx;
      color: #1f9cfd;
  }
  .distributor-left .mydis-val-num{
    font-size: 40rpx;
  }
  .distributor-right{
      display: flex;
      flex-wrap: wrap;
      flex:1;
  }
  .distributor-share{
    display: flex;
    position: relative;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 50%;
    height: 50%;
  }
  .distributor-share .mydis-key{
    font-size: 28rpx;
      color: #999;
  }
  .distributor-share .mydis-val{
    font-size: 25rpx;
    font-weight: bold;
  }

  /* 我的服务 */
  .myservice{
    height: 452rpx;
    background: #fff;
    margin: 20rpx 0;
  }
  .ser-title{
    display: flex;
    align-items: center;
    height: 98rpx;
    padding-left:20rpx;
    font-size: 37rpx;
    font-weight: bold;
    border-bottom: 1rpx solid #ccc
  }
  .ser-itembox{
    display: flex;
    flex-wrap: wrap;
  }
  .ser-item{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 33.3%;
    height: 178rpx;
    font-size: 31rpx;
  }
  .ser-img{
    width: 54rpx;
    height: 54rpx;
    margin-bottom: 22rpx;
  }

  /*客服中心  */
.box-center{
  margin: 20rpx 0;
}
.outbox-normal{
  display: flex;
  height: 107rpx;
  padding:0 20rpx;
  background: #fff;
  align-items: center;
  justify-content: space-between;
}
.outbox-top{
  border-bottom: 2rpx solid #ddd
}
.bolder-font{
  font-weight: bolder;
  font-size: 40rpx;
}
.light-font{
  font-size: 28rpx;
  color: #c2c2c2;
}
.server-line{
  font-size: 31rpx;
  letter-spacing:7rpx;
}
.outbox-bottom .right{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 132rpx;
  border-left: 1px solid #c2c2c2
}
.outbox-bottom .right .iconfont{
  color: #1f9cfd;
  font-size: 58rpx;
}

/* 空白 */
.blank{
  height: 200rpx;
  background: #fefefe;
}

/* 客服 */
.customerser{
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  /* line-height: 100rpx; */
  border-radius: 50%;
  text-align: center;
  background-color: #fff;
  box-shadow: 6rpx 6rpx 6rpx #ccc;
}
.customerser .customimg{
  width: 100%;
  height: 100%;
  transform: scale(0.9)
}
