/* pages/index/index3.wxss */
/* 第一个轮播图 */
page{
    background: #f6f6f6;
  }
  .white{
    background: #fff;
  }
  .light-font{
    color: #999;
    font-size: 28rpx;
  }
  /* 品牌热点 */
  .hot{
    background: #fff;
    padding: 20rpx;
  }
  .hot-title{
    height: 80rpx;
    color: #ff3708;
    font-size: 35rpx;
    font-weight: bold;
  }
  .hot-item{
    position: relative;
    height: 58rpx;
    text-indent: 25rpx;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .hot-item::after{
    display: block;
    content: "";
    position: absolute;
    width: 14rpx;
    height: 14rpx;
    border-radius: 50%;
    background: #ff3708;
    transform: translate(0rpx , -21rpx );
  }

  /* 品牌，经销商，产品 */
  .brand{
    margin: 20rpx 0 40rpx 0;
    background: #fff;
  }
  .brand-head{
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
  }
  .brand-head-item{
    flex:1;
    text-align: center;
    color: #9da0a2;
    font-weight: bold;
  }
  .brand-item{
    display: flex;
    justify-content: space-between;
    height: 225rpx;
    padding:40rpx 20rpx 40rpx 0;
    box-sizing: border-box;
    border-top:1rpx solid #c2c2c2;
  }
  .item-conleft{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
    padding:0 25rpx; 
  }
  .item-textcontent{
    font-size: 31rpx;
    font-weight: bold;
  }
  .item-othercon{
    display: flex;
    justify-content: space-between;
    /* margin-bottom: 0rpx; */
  }
  .item-conright{
    flex: 1;
    width: 215rpx;
    height: 145rpx;
    border: 1rpx solid #eee;
    border-radius: 8rpx
  }
  .item-img{
    width: 215rpx;
    height: 145rpx;
    border-radius: 8rpx;
  }
  .active{
    color: #1f9cfd;
  }
  .active:after{
    display: block;
    content: "";
    border-bottom:1rpx solid #1f9cfd;
  }
  /* 客服 */
contact-button{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  opacity: 0;
}
.customerser{
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #fff;
  box-shadow: 6rpx 6rpx 6rpx #ccc;
}
.customerser .customimg{
  position: absolute;
  left:0rpx;
  width: 100%;
  height: 100%;
  transform: scale(0.7);
  z-index: 2;
  top:-12rpx;
}
.customerser-contact{
  position: absolute;
  font-size:24rpx;
  bottom: 6rpx;
  width:30px;
  left:50%;
  margin-left:-15px;
  color:#1f9cfd;
}

/* 空白蒙层 */
.blankpage{
  position: fixed;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  opacity: 1;
  translate: .3s;
  z-index:6
}
