/*客服中心  */
.box-center{
  margin: 20rpx 0;
}
.outbox-normal{
  display: flex;
  height: 107rpx;
  padding:0 20rpx;
  background: #fff;
  align-items: center;
  justify-content: space-between;
}
.outbox-top{
  border-bottom: 2rpx solid #ddd
}
.bolder-font{
  font-weight: bolder;
  font-size: 40rpx;
}
