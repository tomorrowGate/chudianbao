/* 品牌大学 */
.card-out{
  display: flex;
  justify-content: space-around;
  margin: 38rpx 0;
}
.card-out .colors-card{
  width: 347rpx;
  height: 188rpx;
  border-radius: 5rpx;
  padding: 31rpx;
  background: #fb6;
  box-sizing: border-box
}
.card-out .colors-card2{
  background: #83debd;
}
.card-top{
  font-size: 34rpx;
  line-height: 48rpx;
  font-weight: bold;
  color: #fff;
}
.card-mid{
  font-size: 26rpx;
  color: #fff;
}
.card-btn{
  width: 113rpx;
  height: 45rpx;
  line-height: 45rpx;
  background: #f6ff00;
  border-radius: 16rpx;
  padding:0  14rpx;
  margin-top: 15rpx;
  font-weight: bold;
  box-sizing: border-box;
}
@keyframes myfirst{
  from {width:113rpx; height: 45rpx; opacity: 0;}
  to {width:113rpx; height: 45rpx; opacity: 1;}
}


.go{
  color: #f52f46;
  font-size: 30rpx;
  animation: myfirst linear 0.8s;
  animation-iteration-count: infinite;
  animation-direction:alternate;
}
.go2{
  color: #4a6ef3;
  font-size: 30rpx;
  animation: myfirst linear 0.8s;
  animation-iteration-count: infinite;
  animation-direction:alternate;
}

/* 平台简介 */
.box-bottom{
  padding:20rpx 0;
  background: #fff;
}
.intro-head{
  display: flex;
  justify-content: center;
}
.intro-head-text{
  display: inline-block;
  width: 238rpx;
  height: 48rpx;
  border:1rpx solid #000;
  border-radius: 24rpx;
  font-size: 32rpx;
  text-align: center;
}
.intro-mid{
  display: flex;
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 18rpx;
}
.intro-mid-center{
  margin: auto
}
.intro-mid-more{
  position: absolute;
  right: 20rpx;
}
.intro-mid-center::after{
  display: block;
  content: "";
  border-top:1rpx solid #000;
}
.intro-mid-imgbox{
  height: 278rpx;
  margin: 28rpx 0;
}
.intro-mid-imgbox .imgbox-img{
  width: 100%;
  height: 100%;
} 
.intro-bottom{
  padding:4rpx 10rpx;
  font-size: 30rpx;
  margin-bottom: 70rpx;
  text-align: center;
}
.intro-mid-imgbox2{
  display: flex;
  white-space: nowrap; 
}
.intro-mid-imgbox .imgbox{
  display: inline-block;
  position: relative;
  width: 280rpx;
  height: 280rpx;
  margin-right: 20rpx;
}
.intro-mid-imgbox .imgbox .fixed-img{
  position: absolute;
  top:calc( 50% - 50rpx );
  left:calc( 50% - 50rpx );
  width: 100rpx;
  height: 100rpx;
  z-index: 3;
}
.intro-mid-imgbox .imgbox .main-img{
  width: 100%;
  height: 100%;
}

