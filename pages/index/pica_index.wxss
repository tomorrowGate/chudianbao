/* pages/index/myinfo.wxss */

/* 头部 */

.box {
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-between;
  padding: 0 20px;
  box-sizing: border-box;
  margin-bottom: 83rpx;
}

.avitor {
  width: 134rpx;
  height: 134rpx;
  border-radius: 67rpx;
}

.box-center {
  position: relative;
  left: -32px;
  display: flex;
  flex-direction: column;
}

.center-top {
  display: flex;
  align-items: center;
}

.brand {
  border-radius: 12px 16px 16px 0px;
  color: #fff;
  background: #23adfc;
  font-size: 12px;
  margin-left: 5px;
  padding: 1px 2px;
  width: auto;
  text-align: center;
  letter-spacing: 1px;
}

.user-name {
  font-weight: bold;
  font-size: 38rpx;
}

.center-bottom {
  margin-top: 10px;
  width: 100px;
  font-size: 16px;
  border-radius: 12px;
  border: 1px solid #e5e5e5;
  text-align: center;
}

.item-left {
  position: relative;
}

.icon1 {
  font-size: 58rpx;
  position: relative;
  left: -10px;
}

.dott-number {
  position: absolute;
  top: 0rpx;
  right: 0px;
  height: 30rpx;
  line-height: 30rpx;
  padding: 0 10rpx;
  border-radius: 8px;
  background: #f00;
  color: #fff;
  font-size: 12px;
  text-align: center;
}

/* 付款方式 */

.pay {
  display: flex;
  padding: 10px 20px;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #e5e5e5;
}

.pay-item {
  display: flex;
  flex-direction: column;
  text-align: center;
  color: #707c94;
}

.icon2 {
  font-size: 24px;
}

.pay-font {
  font-size: 14px;
  margin-top: 3px;
}

/* 我的经销商 */

.distributor-box {
  width: 100%;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  /* background: #f6f6f6; */
}

.distributor {
  display: flex;
  height: 285rpx;
  background: #fff;
  box-shadow: -2px 0 3px #f8f8f8, 2px 0px 3px #f8f8f8, 0 -2px 3px #f8f8f8, 0 2px 3px #f8f8f8;
}

.distributor-left {
  display: flex;
  position: relative;
  flex-direction: column;
  align-items: center;
  width: 236rpx;
  background: rgb(235, 246, 255);
}

.distributor-left .mydis-key {
  position: absolute;
  top: 40rpx;
  font-size: 28rpx;
  color: #999;
}

.distributor-left .mydis-val {
  margin: auto;
  font-size: 28rpx;
  color: #1f9cfd;
}

.distributor-left .mydis-val-num {
  font-size: 40rpx;
}

.distributor-right {
  display: flex;
  flex-wrap: wrap;
  flex: 1;
}

.distributor-share {
  display: flex;
  position: relative;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 50%;
  height: 50%;
}

.distributor-share .mydis-key {
  font-size: 28rpx;
  color: #999;
}

.distributor-share .mydis-val {
  font-size: 25rpx;
  font-weight: bold;
}

/* 列表显示 */

.list-box {
  display: flex;
  flex-direction: column;
  font-size: 34rpx;
  margin-bottom: 40px;
}

.list-item {
  display: flex;
  flex-direction: row;
  height: 106rpx;
  line-height: 106rpx;
  letter-spacing: 1px;
  position: relative;
  box-sizing: border-box;
  padding: 0rpx 44rpx;
}

.item-name {
  margin-left: 25rpx;
}
.item-name-help{
  margin-left: 19rpx;
}
.line {
  border-bottom: 1px solid #e9e9e9;
}

.go {
  position: absolute;
  right: 44rpx;
  color: #e5e5e5;
}

.icon3-1, .icon3-2, .icon3-3, .icon3-4, .icon3-5, .icon3-6 {
  font-size: 40rpx;
}

.icon3-1 {
  color: #6184f9;
}

.icon3-2 {
  color: #ff7687;
}

.icon3-3 {
  margin-left: -6rpx;
  font-size: 50rpx;
  color: #fcc547;
}

.icon3-4 {
  color: #6f8ffb;
}

.icon3-5 {
  color: #25d8e2;
}

.icon3-6 {
  color: #959595;
}

/* 客服 */
contact-button{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  opacity: 0;
}
.customerser{
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #fff;
  box-shadow: 6rpx 6rpx 6rpx #ccc;
}
.customerser .customimg{
  position: absolute;
  left:0rpx;
  width: 100%;
  height: 100%;
  transform: scale(0.7);
  z-index: 2;
  top:-12rpx;
}
.customerser-contact{
  position: absolute;
  font-size:24rpx;
  bottom: 6rpx;
  width:30px;
  left:50%;
  margin-left:-15px;
  color:#1f9cfd;
  text-align: center;
}
