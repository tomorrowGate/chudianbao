  /*上派集成社 */
  .outbox{
    display: flex;
    flex-direction: column;
    background: #fff;
    padding-bottom: 20rpx;
    margin: 20rpx 0;
  }
  .outbox .outbox-top{
      display: flex;
      align-items: center;
      height: 65rpx;
  }
  .head-main{
      display: flex;
      align-items: center;
      flex:1;
      vertical-align: middle;
  }
  .outbox .head-right{
      position: absolute;
      right: 28rpx;
  }
  .light-font{
    font-size: 28rpx;
    color: #c2c2c2;
  }
  .outbox-top .head-main{
      padding-left: 25rpx;
      font-size: 35rpx;
      border-left: 1rpx solid #ccc;
  }
  .outbox-top .head-tag{
      margin-left: 15rpx;
      padding: 0 17rpx;
      font-size: 25rpx;
      border-radius: 17rpx 17rpx 17rpx 0;
      background: #1f9cfd;
      color: #fff;
  }
  .outbox-bottom{
      padding: 20rpx 20rpx 0;
      font-size: 30rpx;
  }
  .outbox-add{
    padding-left:20rpx;
  }
  .ellipsis{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
  }

  .outbox .imgbox{
    width: 145rpx;
    height: 54rpx;
    overflow: hidden;
  }
  .imgbox .title-img{
    height: 100%;
    width:100%;
    transform: scale(1.8);
  }

  /* 品牌热点 */
  .hot{
    background: #fff;
    padding: 20rpx;
  }
  .hot-title{
    height: 80rpx;
    color: #ff3708;
    font-size: 35rpx;
    font-weight: bold;
  }
  .hot-item{
    position: relative;
    height: 58rpx;
    text-indent: 25rpx;
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .hot-item::after{
    display: block;
    content: "";
    position: absolute;
    width: 14rpx;
    height: 14rpx;
    border-radius: 50%;
    background: #ff3708;
    transform: translate(0rpx , -21rpx );
  }

  /* 品牌，经销商，产品 */
  .brand{
    margin-top: 20rpx;
    background: #fff;
  }
  .brand-head{
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
  }
  .brand-head-item{
    flex:1;
    text-align: center;
    color: #9da0a2;
    font-weight: bold;
  }
  .brand-item{
    display: flex;
    justify-content: space-between;
    height: 225rpx;
    padding:40rpx 20rpx 40rpx 0;
    box-sizing: border-box;
    border-top:1rpx solid #c2c2c2;
  }
  .item-conleft{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
    padding:0 25rpx; 
  }
  .item-textcontent{
    font-size: 31rpx;
    font-weight: bold;
  }
  .item-othercon{
    display: flex;
    justify-content: space-between;
    /* margin-bottom: 0rpx; */
  }
  .item-conright{
    flex: 1;
    width: 215rpx;
    height: 145rpx;
    background: #000;
  }
  .item-img{
    width: 215rpx;
    height: 145rpx;
  }

  /* 客服 */
.customerser{
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #fff;
  box-shadow: 6rpx 6rpx 6rpx #ccc;
}
.customerser .customimg{
  width: 100%;
  height: 100%;
  transform: scale(0.9)
}
