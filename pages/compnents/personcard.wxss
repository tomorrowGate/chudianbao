/* pages/compnents/personcard.wxss */
/* 人物 */
@import "/app.wxss";
.rotatestar{
  transform: rotate( -180deg );
  transition:.3s;
}
.rotate{
  transform: rotate( 0deg );
  transition:.3s;
}

.out-box{
  background: #fff;
  margin-bottom: 26rpx;
}
.shop{
  display:flex;
  justify-content: center;
  align-items: center;
  padding: 15rpx 0;
  font-size: 32rpx;
  color:#394043;
  margin-bottom: 20rpx;
  background: #fff;
}
.shop-circle{
  margin-left: 18rpx;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 50%;
  background: #1f9cfd;
  color: #fff;
  text-align: center;
}
.shop-circle .icon1{
  font-size: 24rpx;
}
.msg{
  display: flex;
  position: relative;
  flex-direction: column;
  padding:0 16rpx;
  box-sizing: border-box; 
  font-size: 34rpx;
  background: #fff;
}
.msg-item{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height:78rpx;
  line-height: 78rpx;
}
.msg-item-region{
  width: 100%;
}
.picker{
  margin-left: 30rpx;

}
.city-smp{
  display: flex;
  justify-content: space-between;
  height: 78rpx;
  font-size: 28rpx;
  align-items: center;
}
.city-det{
  display: flex;
}
.dis-input{
  outline: 1rpx solid #f5f5f5;
  width: 350rpx
}
.msg-item-region textarea{
   height: 80px;
   outline: 1rpx solid #f5f5f5;
   vertical-align: top;
   margin-top: 10rpx;
   font-size: 28rpx;
}
.add-key{
  width: 160rpx;
  font-size: 28rpx;
}
.value{
  margin-left:66rpx;
  color:#8f8f8f;
  font-size: 30rpx;
}
.value .input{
  outline: #1f9cfd solid 1rpx;
}
.value .erroinput{
  outline: #f00 solid 1rpx;
}
.edit{
  position: absolute;
  right:20rpx;
  color:#1f9cfd;
  font-size: 32rpx;
}
.line{
  border-bottom:1px solid #eaeaea;
}
.btn{
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #1f9cfd;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
.cityvalue{
  display: flex;
  height: 50rpx;
  font-size: 28rpx;
}