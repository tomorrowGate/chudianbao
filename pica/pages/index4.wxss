/* pica/pages/index4.wxss */
/* 头部 */
.box{
  display: flex;
  flex-direction: row;
  width:100%;
  justify-content: space-between;
  padding:0 20px;
  box-sizing: border-box;
}
.avitor{
  width:134rpx;
  height:134rpx;
  border-radius: 67rpx;
}
.box-center{
  position: relative;
  left:-32px;
  display: flex;
  flex-direction: column;
}
.center-top{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}
.brand{
  border-radius:12px 16px 16px 0px;
  color:#ffffff;
  background:#23adfc;
  font-size:12px;
  line-height: 18px;
  margin-left:5px;padding:1px 2px;
  width:auto;text-align: center;height:18px;letter-spacing: 1px;
}
.user-name{font-weight: bold;font-size:38rpx;}
.center-bottom{
  margin-top:10px;
  width:100px;
  font-size:16px;
  border-radius:12px;
  border:1px solid #e5e5e5;
  text-align: center;
}
.item-left{
  
  position: relative;
}
.icon1{
  font-size:58rpx;position: relative;left:-10px;
}
.dott-number{
  width:16px;
  height:16px;
  border-radius: 8px;
  background:#ff0000;
  color:#ffffff;font-size:14px;
  text-align: center;line-height:16px;position: absolute;top:0px;right:0px;
}
/* 付款方式 */
.pay{
  display: flex;
  padding:10px 20px;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #e5e5e5;
}
.pay-item{
  display: flex;
  flex-direction: column;
  text-align:center;
  color:#707c94;
}
.icon2{
  font-size:24px;
}
.pay-font{
  font-size:14px;
  margin-top:3px;
}
/* 我的经销商 */
.distributor-box{
  width:100%;
   padding: 40rpx 20rpx;
   box-sizing: border-box;
}
  .distributor{
      display: flex;
      height: 285rpx;
      background: #fff;
      box-shadow: -2px 0 3px #f8f8f8,2px 0px 3px #f8f8f8,
      0 -2px 3px #f8f8f8,0 2px 3px #f8f8f8;
  }
  .distributor-left{
      display: flex;
      position: relative;
      flex-direction: column;
      align-items: center;
      width: 236rpx;
      background: rgb(235,246,255);
  }
  .distributor-left .mydis-key{
      position: absolute;
      top:40rpx;
      font-size: 28rpx;
      color: #999;
  }
  .distributor-left .mydis-val{
      margin: auto;
      font-size: 28rpx;
      color: #1f9cfd;
  }
  .distributor-left .mydis-val-num{
    font-size: 40rpx;
  }
  .distributor-right{
      display: flex;
      flex-wrap: wrap;
      flex:1;
  }
  .distributor-share{
    display: flex;
    position: relative;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 50%;
    height: 50%;
  }
  .distributor-share .mydis-key{
    font-size: 28rpx;
      color: #999;
  }
  .distributor-share .mydis-val{
    font-size: 25rpx;
    font-weight: bold;
  }
  /* 列表显示 */
  .list-box{
    display: flex;
    flex-direction: column;
    font-size:34rpx;
    margin-bottom: 40px;
  }
  .list-item{
    display: flex;
    flex-direction: row;
    height: 106rpx;
    line-height: 106rpx;
    letter-spacing: 1px;
    position: relative;
    box-sizing: border-box;
    padding:0rpx 44rpx;
    
  }
  .item-name{
    margin-left:25rpx;
  }
  .line{
   border-bottom: 1px solid #e9e9e9;
  }
.go{
  position: absolute;
  right:44rpx;color:#e5e5e5;
}
.icon3-1,.icon3-2,.icon3-3,.icon3-4,.icon3-5,.icon3-6{
  font-size:40rpx;
}
.icon3-1{
  color:#6184f9;
}
.icon3-2{
  color:#ff7687;
}
.icon3-3{
  color:#fcc547;
}
.icon3-4{
  color:#6f8ffb;
}
.icon3-5{
  color:#25d8e2;
}
.icon3-6{
  color:#959595;
}