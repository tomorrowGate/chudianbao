/* pica/pages/pica_card/pica_card.wxss */
.card{
  padding:0 20rpx;
  border-bottom: 4rpx solid #f8f9f8;
}
.header-top{
  display: flex;
  position: relative;
  flex-direction: row;
  justify-content: flex-start;
  box-sizing: border-box;
  height:62rpx;
  line-height:62rpx;
}
.header image{width:136rpx;height:62rpx;padding-right:17rpx;}
.brand{font-size:29rpx; border-left:1px solid #d9dad9;padding-left:17rpx;}
.store{
  border-radius:12px 16px 16px 0px;
  color:#ffffff;
  background:#23adfc;
  font-size:12px;
  line-height: 18px;
  padding:1px 2px;
  width:auto;
  text-align: center;
  height:18px;
  margin-left:17rpx;
}
.intro{position: absolute;right:0px;color:#c0c0c0;font-size:28rpx;}
.icon1{font-size:24rpx; display:inline-block;}
.rotatestar{
  transform: rotate( -180deg );
  transition:.3s;
}
.rotate{
  transform: rotate( 0deg );
  transition:.3s;
}
.outbox-bottom{
      padding: 20rpx 0rpx 0;
      font-size: 30rpx;
  }
  .ellipsis{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
  }
/* 人物 */
.box{
  display: flex;
  width:100%;
  justify-content: space-between;
  margin-top: 94rpx;
  padding: 34rpx 0;
}
.avitor{
  width:134rpx;
  height:134rpx;
  border-radius: 67rpx;
}
.box-center{
  display: flex;
  flex-direction: column;
  
}
.center-top{
  display: flex;
  align-items: center;
}
.brand{
  border-radius: 12px 16px 16px 0px;
  color: #fff;
  background: #23adfc;
  font-size: 12px;
  margin-left: 5px;
  padding: 0 17rpx;
  width: auto;
  text-align: center;
}
.user-name{font-weight: bold;font-size:38rpx;}
.center-bottom-out{
  margin-top: 20rpx;
}
.center-bottom{
  padding:0rpx 34rpx 4rpx 34rpx;
  margin-top:20rpx;
  font-size:32rpx; 
  border:1px solid #e5e5e5;
  border-radius:24rpx;
  text-align: center;
}
.item-left{
  display:flex;
  flex-direction: column;
  padding-top:10rpx;
}
.change{
  width:202rpx;
  height:62rpx;
  color:#ffffff;
  background-color: #1f9cfd;
  border-radius: 8rpx;
  line-height:62rpx;
  text-align: center;
  font-size:28rpx;
}
.share{ 
  width:200rpx;
  height:60rpx;
  line-height:60rpx;
  color:#1f9cfd;
  border-radius: 8rpx;
 /*  border:1rpx solid #1f9cfd; */
  text-align: center;
  font-size:28rpx;
  margin-top:15rpx;
  background: #fff;
}
.share::after{
  border:1rpx solid #1f9cfd;
}
.shop{
  display:flex;
  justify-content: center;
  align-items: center;
  padding: 15rpx 0;
  font-size: 32rpx;
  color:#394043;
  margin-bottom: 20rpx;
}
.shop-circle{
  margin-left: 18rpx;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 50%;
  background: #1f9cfd;
  color: #fff;
  text-align: center;
}
.msg{
  display: flex;
  position: relative;
  flex-direction: column;
  /* padding:0 16rpx; */
  box-sizing: border-box; 
  font-size: 34rpx
}
.msg-item{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height:90rpx;
  padding: 0 20rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}
.msg-item-region{
  width: 100%;
  font-size: 32rpx;
}
.picker{
  position: absolute;
  width:120rpx;
  right: 0;
}
.city-smp{
  display: flex;
  position: relative;
  height: 90rpx;
  align-items: center;
  justify-content: space-between;
}
.city-det{
  display: flex;
}
.dis-input{
  outline: 1rpx solid #f5f5f5;
  width: 420rpx;
  height: 60rpx;
  line-height: 60rpx;
  color:#8f8f8f;
  font-size: 32rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.msg-item-region textarea{
   height: 80px;
   width: 550rpx;
   outline: 1rpx solid #f5f5f5;
   vertical-align: top;
   padding: 10rpx;
   margin-top: 10rpx;
   font-size: 32rpx;
   box-sizing: border-box;
}
.add-key{
  width: 160rpx;
  font-size: 31rpx;
}
.value{
  margin-left:66rpx;
  color:#8f8f8f;
  font-size: 32rpx;
}
.value .input{
  outline: #1f9cfd solid 1rpx;
}
.value .erroinput{
  outline: #f00 solid 1rpx;
}
.edit{
  position: absolute;
  right:20rpx;
  color:#1f9cfd;
  font-size: 32rpx;
}
.line{
  border-bottom:1px solid #eaeaea;
}
.show{display:block;}
.hide{display:none;}
.btn{
  height: 50rpx;
  line-height: 50rpx;
  background: #1f9cfd;
  color: #fff;
  text-align: center;
  border-radius: 6rpx;
}
.cityvalue{
  display: flex;
  height: 50rpx;
  /* width: 580rpx; */
}