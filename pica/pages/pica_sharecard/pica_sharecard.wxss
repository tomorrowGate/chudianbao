/* pica/pages/pica_sharecard/pica_sharecard.wxss */
.box{
  display: flex;
  width:100%;
  justify-content: space-between;
  margin-top: 94rpx;
  padding: 34rpx 40rpx;
  box-sizing: border-box;
}
.avitor{
  width:134rpx;
  height:134rpx;
  border-radius: 67rpx;
}
.box-center{
  display: flex;
  flex-direction: column;
  
}
.center-top{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-bottom: 16rpx;
}
.brand{
  border-radius:12px 16px 16px 0px;
  color:#ffffff;
  background:#23adfc;
  font-size:12px;
  line-height: 18px;
  margin-left:5px;padding:1px 2px;
  width:auto;text-align: center;height:18px;letter-spacing: 1px;
}
.user-name{font-weight: bold;font-size:38rpx;}
.center-bottom{
  padding:0rpx 34rpx 4rpx 34rpx;
  font-size:32rpx; 
  border:1px solid #e5e5e5;
   border-radius:24rpx;
  text-align: center;
}
.item-left{
  display:flex;
  flex-direction: column;
  padding-top:10rpx;
}
.change{
  width:202rpx;
  height:62rpx;
  color:#ffffff;
  background-color: #1f9cfd;
  border-radius: 8rpx;
  line-height:62rpx;
  text-align: center;
  font-size:28rpx;
}
.share{ 
  width:200rpx;
  height:60rpx;
  line-height:60rpx;
  color:#1f9cfd;
  border-radius: 8rpx;
  /* border:1rpx solid #1f9cfd; */
  text-align: center;
  font-size:28rpx;
  margin-top:15rpx;
  background: #fff;
}
.share::after{
  border:1rpx solid #1f9cfd;
}
.shop{
  display:flex;
  justify-content: center;
  align-items: center;
  padding: 15rpx 0;
  font-size: 32rpx;
  color:#394043;
  margin-bottom: 20rpx;
}
.shop-circle{
  margin-left: 18rpx;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 50%;
  background: #1f9cfd;
  color: #fff;
  text-align: center;
}
.msg{
  display: flex;
  position: relative;
  flex-direction: column;
  padding:0 16rpx;
  box-sizing: border-box; 
  font-size: 34rpx
}
.msg-item{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height:78rpx;
  line-height: 78rpx;
}
.msg-item-region{
  width: 100%;
}
.picker{
  margin-left: 30rpx;

}
.city-smp{
  display: flex;
  height: 78rpx;
  font-size: 28rpx;
  align-items: center;
  justify-content: space-between;
}
.city-det{
  display: flex;
}
.dis-input{
  outline: 1rpx solid #f5f5f5;
  width: 350rpx
}
.msg-item-region textarea{
   height: 80px;
   outline: 1rpx solid #f5f5f5;
   vertical-align: top;
   margin-top: 10rpx;
   font-size: 28rpx;
}
.add-key{
  width: 160rpx;
  font-size: 28rpx;
}
.value{
  margin-left:66rpx;
  color:#8f8f8f;
  font-size: 30rpx;
}
.value .input{
  outline: #1f9cfd solid 1rpx;
}
.value .erroinput{
  outline: #f00 solid 1rpx;
}
.edit{
  position: absolute;
  right:0rpx;
  color:#1f9cfd;
  font-size: 32rpx;
}
.line{
  border-bottom:1px solid #eaeaea;
}
.show{display:block;}
.hide{display:none;}
.btn{
 /*  float: right; */
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #1f9cfd;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
.cityvalue{
  display: flex;
  height: 50rpx;
  font-size: 28rpx;
 /*  margin-left: 30rpx; */
}