/* pica/pages/pica_message/pica_message.wxss */

.message {
  width: 100%;
  height: 356rpx;
  background: #282724;
  padding: 0rpx 26rpx;
  box-sizing: border-box;
  position: relative;
}

.mymessage {
  display: flex;
  flex-direction: column;
  color: #fff;
  padding-top: 50rpx;
}

.header {
  font-size: 38rpx;
  letter-spacing: 4rpx;
}

.info {
  font-size: 24rpx;
  margin-top: 18rpx;
  letter-spacing: 4rpx;
  position: relative;
}

.dot1 {
  position: absolute;
  left: 188rpx;
  top: 0px;
  width: 42rpx;
  height: 42rpx;
  border-radius: 21rpx;
  background-color: #238bd9;
}

.icon1 {
  font-size: 30rpx;
  position: relative;
  left: 4rpx;
  top: 6rpx;
}

.total {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  color: #000;
  justify-content: space-around;
  height: 208rpx;
  border-radius: 16rpx;
  box-shadow: 4rpx 4rpx 5rpx #f2f2f2;
  margin-top: 50rpx;
  font-size: 25rpx;
  text-align: center;
}

.item {
  margin-top: 54rpx;
}

.dot {
  position: relative;
  width: 76rpx;
  height: 76rpx;
  line-height: 76rpx;
  text-align: center;
  border-radius: 38rpx;
  color: #fff;
  margin: 0 auto;
}

.dott1 {
  background-color: #219cf0;
}

.dott2 {
  background-color: #ff762b;
}

.dott3 {
  background-color: #ffe11a;
}

.icon {
  font-size: 46rpx;
}

.stickyClass{
  position: -webkit-sticky;
    position: sticky;
    top: 0 
}

.text {
  margin-top: 12rpx;
  font-size: 25rpx;
  letter-spacing: 2rpx;
  text-align: center;
  position: relative;
}

.num {
  height: 28rpx;
  line-height: 28rpx;
  width: auto;
  border-radius: 14rpx;
  background-color: #ff514b;
  color: #fff;
  position: absolute;
  top: 0px;
  left: 52rpx;
  font-size: 20rpx;
  padding: 0rpx 8rpx;
}

.body {
  display: flex;
  flex-direction: column;
  margin-top: 58rpx;
}

.body-item {
  padding: 0 26rpx;
  box-sizing: border-box;
}

.aa {
  height: 130rpx;
  line-height: 130rpx;
  border-bottom: 1px solid #e9e9e9;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.item-left {
  width: 76rpx;
  height: 76rpx;
  border-radius: 38rpx;
  color: #fff;
  position: relative;
  background-color: #219cf0;
  line-height: 76rpx;
}

.ico {
  font-size: 38rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -38rpx;
  margin-left: -19rpx;
}

.item-right {
  margin-left: 25rpx;
  flex-direction: column;
  height: 76rpx;
  font-size: 32rpx;
  line-height: 38rpx;
  align-items: center;
  width: calc(100% - 101rpx);
}

.mesg {
  font-size: 28rpx;
  position: relative;
}

.msg-content {
  margin-top: 8rpx;
  font-size: 28rpx;
  color: #9b9b9b;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.data {
  position: absolute;
  right: 0px;
  top: 0px;
  color: #9b9b9b;
}

.btu {
  width: 28rpx;
  height: 28rpx;
  border-radius: 14rpx;
  background-color: #fd4e2d;
  position: absolute;
  top: 0rpx;
  left: 52rpx;
}
