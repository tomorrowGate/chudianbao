/* pica/pages/pica_feedback/pica_feedback.wxss */
.suggest,.picture{
  display: flex;
  flex-direction: column;
  padding:0 32rpx;
  border-bottom: 1px solid #e9e9e9;
}
.header{margin-top:4px;}
.input{
  height:390rpx;
  margin:20rpx 0;
}
textarea{
  font-size: 32rpx;
  flex-wrap: wrap;
  display:flex;
  width:100%;
  height:390rpx;
}
.iconcontact{
  margin:38rpx;
  width:160rpx;height:160rpx;
}
image{
  width:160rpx;
  height:160rpx;
}
/* 选择图片 */
.question-images{
  display: flex;
  flex-wrap: wrap;
}
.q-image-wrap{
  width: 33.3%;
  border:1rpx splid #f5f5f5
}

.icon{
  font-size:166rpx;
  padding-top:32rpx;
}
.contact{display: flex;
  flex-direction: column;
  padding:0 32rpx;}
.inputContact{
  padding:20rpx;
  margin:20rpx 10rpx;
  border:1px solid #ccc;
}
.but{
  width:580rpx;
  height:87rpx;
  margin:0 auto;
  background-color: #2fa0f3;
  color:#ffffff;
  text-align: center;
  border-radius:24rpx;
  line-height: 87rpx; 
  margin-bottom: 160rpx;
}